{
  "version": 2,
  "builds": [
    {
      "src": "*.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "^/$", "dest": "/index.html" },
    { "src": "/about", "dest": "/about.html" },
    { "src": "/products", "dest": "/products.html" },
    { "src": "/contact", "dest": "/contact.html" },
    { "src": "/cart", "dest": "/addToCart.html" },
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/$1" }
  ]
}
